# Only one processor is used below. To parallelize NAMD, use this scheme:
#     charmrun namd2 +p4 input_file.inp > output_file.out
# where the "4" in "+p4" is replaced with the actual number of processors you
# intend to use.

### stampede2
module purge
module load intel/16.0.3 impi namd/2.13

### midway
module load namd
# charmrun namd2 

# Running equilibration steps
set cnt    = 1
set cntmax = 6

while ( ${cnt} <= ${cntmax} )
    set step = "step6.${cnt}"
    ibrun namd2_skx +ppn 11 +pemap 2-22:2,26-46:2,3-23:2,27-47:2 +commap 0,24,1,25 ${step}.inp | tee ${step}.out
    @ cnt += 1
end

# Running production for 10 nanoseconds
ibrun namd2_skx +ppn 11 +pemap 2-22:2,26-46:2,3-23:2,27-47:2 +commap 0,24,1,25 step7.inp | tee step7.out

